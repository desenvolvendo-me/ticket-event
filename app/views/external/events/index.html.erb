<div class="flex flex-col-2 items-center justify-center" >
  <section class="relative z-10 overflow-hidden bg-white py-20 lg:py-[120px]" >
    <div class="container mx-auto" >
      <div class="-mx-4 flex flex-col lg:justify-between" >
        <div class="w-full px-4" >
          <div class="mb-12 max-w-[570px] lg:mb-0" >
            <h2 class="text-dark mb-6 text-[32px] font-bold uppercase sm:text-[40px] lg:text-[36px]" >
              <%= @event.name %>
            </h2>
            <p>
              <%= @event.description %>
            </p>
          </div>
        </div>
        <div class="w-full px-4" >
          <div class="flex-auto rounded-lg bg-white p-8 shadow-lg sm:p-12" >
            <div class="mb-6 text-center">
              <%= I18n.localize(@event.date, format: :long) %>
            </div>
            <div class="text-center bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
              <% if @event_checker %>
                <%= link_to("Acessar Ingresso", search_ticket_path(@event.slug)) %>
              <% else %>
                <%= link_to("Acessar Aulas", lessons_index_path) %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div class="flex flex-col justify-center space-y-8">
    <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= event_path(@event.slug) %>" class="bg-indigo-500 hover:bg-indigo-700 text-white px-4 py-2 rounded-full">
      Compartilhar no LinkedIn
    </a>

    <a href="https://mail.google.com/mail/?view=cm&to=<%= event_path(@event.slug) %>" class="bg-blue-500 hover:bg-blue-700 text-white px-4 py-2 rounded-full">
      Compartilhar por Gmail
    </a>

    <a href="whatsapp://send?text=<%= event_path(@event.slug) %>" class="bg-green-500 hover:bg-green-700 text-white px-4 py-2 rounded-full">
      Compartilhar no WhatsApp
    </a>
  </div>
</div>
