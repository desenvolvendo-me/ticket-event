<div class="flex flex-col items-center justify-center">
  <div class="flex">
    <div class="p-4">
      <div class="flex items-center uppercase justify-center mb-4 text-2xl font-bold leading-none tracking-tight text-gray-800">Check-In
        realizado!
      </div>
      <div class="flex items-center justify-center mb-4 text-4xl font-bold leading-none tracking-tight text-gray-800"><%= @ticket.event.name %></div>
      <p class="leading-normal"><%= @ticket.event.description %></p>
      <div class="flex items-center justify-center mt-4 text-gray-700">
        <div class="flex text-2xl w-1/2 justify-center">
          <%= @ticket.event.date.strftime("%d/%m | %H:%Mh") %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to event_ticket_path(@ticket.event.slug, @ticket.student.phone) do %>
    <button class="bg-gray-300 uppercase hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded inline-flex items-center">
      <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
        <path d="M13 8V2H7v6H2l8 8 8-8h-5zM0 18h20v2H0v-2z"/>
      </svg>
      <span>Pegue aqui seu ingresso!</span>
    </button>
  <% end %>
</div>

