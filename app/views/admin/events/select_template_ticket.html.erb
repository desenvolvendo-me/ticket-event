<div class="panel">
  <div class="panel_contents">
    <div class="attributes_table source" id="attributes_table_source_1">
      <table border="0" cellspacing="0" cellpadding="0">
        <tbody>
        <%= form_for :event, :url => { action: 'set_template_ticket' }, :html => { :multipart => true } do |f| %>
          <tr class="row row-key">
            <th><%= t("active_admin.views.event.template_ticket_id") %></th>
            <td><%= f.select :template_ticket_id, options_for_select(TemplateTicket.all.collect { |template_ticket| [template_ticket.name, template_ticket.id] }), prompt: t("active_admin.views.event.template_ticket_id") %></td>
          </tr>
          <tr class="row row-key">
            <th> <%= submit_tag t("active_admin.views.submit") %></th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>