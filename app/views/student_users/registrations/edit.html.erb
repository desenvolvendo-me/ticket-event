<h2><%= t 'views.manager_users.registrations.edit.title' %> <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "manager_users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login, autofocus: true, autocomplete: "login" %>
  </div>

  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t 'views.manager_users.registrations.edit.password' %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= t 'views.manager_users.registrations.edit.min_characters' %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t 'views.manager_users.registrations.edit.current_password' %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar, autofocus: true, autocomplete: "avatar" %>
  </div>

  <%= image_tag resource.avatar if resource.avatar.present? %>
  <div class="actions">
    <%= f.submit t('views.manager_users.registrations.edit.update') %>
  </div>
<% end %>

<h3><%= t('views.manager_users.registrations.edit.cancel') %></h3>

<div><%= t('views.manager_users.registrations.edit.unhappy?') %> <%= button_to t('views.manager_users.registrations.edit.cancel'), registration_path(resource_name), data: { confirm: t('views.manager_users.registrations.edit.sure?'), turbo_confirm: I18n.t('views.manager_users.registrations.edit.sure?') }, method: :delete %></div>

<%= link_to I18n.t('views.manager_users.registrations.edit.back'), :back %>
