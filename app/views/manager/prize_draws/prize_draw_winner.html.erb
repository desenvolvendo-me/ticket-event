<section class="h-screen bg-white py-10 mb-10 dark:bg-gray-900">
  <div class="bg-white shadow-xl mx-auto max-w-xl rounded-md">
<!--    <div class="px-6 fa-align-center">-->
      <dl class="flex flex-col items-center justify-center space-x-6">
        <% if @ticket.present? %>
        <div class="flex flex-col items-center">
          <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white"><%= t('activerecord.attributes.prize_draw.event') %></dt>
          <dd class="mb-4 font-light text-gray-500 sm:mb-4 dark:text-gray-400"><%= @ticket.number %></dd>
        </div>
          <div class="flex flex-col items-center">
            <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white"><%= t('activerecord.attributes.prize_draw.event') %></dt>
            <dd class="mb-4 font-light text-gray-500 sm:mb-5 dark:text-gray-400"><%= @ticket.student.name %></dd>
          </div>
        <% else %>
          <p>Nenhum ticket sorteado.</p>
        <% end %>
      </dl>
<!--    </div>-->
  </div>
</section>

