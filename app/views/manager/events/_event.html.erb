<tr class="hover:bg-gray-100 border-b dark:border-gray-700">
  <th scope="row" class="px-4 py-3 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= event.name %></th>
  <td class="px-4 py-3"><%= event.launch %></td>
  <td class="px-4 py-3"><%= event.description %></td>
  <td class="px-4 py-3"><%= I18n.localize(event.date, format: :long) %></td>
  <td class="px-4 py-3"><%= event.duration %> <%= t('.hours') %> </td>
  <td class="px-4 py-3 flex items-center justify-end">
    <button id="lessons-dropdown-button-<%= event.id %>" data-dropdown-toggle="lessons-dropdown-<%= event.id %>" class="inline-flex items-center p-0.5 text-sm font-medium text-center text-gray-500 hover:text-gray-800 rounded-lg focus:outline-none dark:text-gray-400 dark:hover:text-gray-100" type="button">
      <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
      </svg>
    </button>
  </td>
</tr>

<div id="lessons-dropdown-<%= event.id %>" class="hidden z-10 w-30 bg-white rounded divide-y flex flex-col items-center divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600">
  <ul class="py-1 text-sm flex flex-col items-center text-gray-700 dark:text-gray-200" aria-labelledby="lessons-dropdown-button-<%= event.id %>">
    <li class="hover:bg-gray-100">
      <%= link_to(manager_event_path(event), class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white") do %>
        <%= t('views.manager.event.show') %>
      <% end %>
    </li>
    <li class="hover:bg-gray-100">
      <%= link_to(edit_manager_event_path(event), class: "block py-2 px-4 dark:hover:bg-gray-600 dark:hover:text-white") do %>
        <%= t('views.manager.event.edit') %>
      <% end %>
    </li>
  </ul>
  <div class="self-center hover:bg-gray-100">
    <%= link_to(manager_event_path(event), data: { turbo_method: :delete, turbo_confirm: t('views.manager.event.delete_confirm') }, class: "block py-2 px-4 text-sm text-gray-700 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white") do %>
      <%= t('views.manager.event.delete') %>
    <% end %>
  </div>
</div>
