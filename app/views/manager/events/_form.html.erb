<section class="bg-white dark:bg-gray-900 relative shadow-md sm:rounded-lg">
  <div class="px-4 mx-auto max-w-2xl pb-8">
    <%= form_with(model: @event, url: @event.persisted? ? manager_event_path(@event) : manager_events_path, local: true, html: { multipart: true }) do |form| %>
      <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
        <div>
          <%= form.label :image %>
          <%= form.file_field :image %>
        </div>
        <div class="field">
          <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('.name') %></label>
          <%= form.text_field :name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Your name here", required: true %>
        </div>
        <div class="sm:col-span-2">
          <label for="description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('.description') %></label>
          <%= form.text_area :description, class: "h-20 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Your description here", required: true %>
        </div>
        <div class="field">
          <%= form.label :duration, t('.duration'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= form.number_field :duration, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
        </div>
        <div class="sm:col-span-2">
          <label for="date" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('.date') %></label>
          <%= form.datetime_local_field :date, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Your date here" %>
        </div>
        <div class="field">
          <%= form.label :launch, t('.launch'), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= form.number_field :launch, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
        </div>
        <div class="sm:col-span-2">
          <label for="community_link" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('.community_link') %></label>
          <%= form.text_field :community_link, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Ex: https://discord.gg/Tq3KQZTd" %>
        </div>

        <div class="sm:col-span-1">
          <label for="purchase_link" class="mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('.purchase_link') %></label>
          <%= form.text_field :purchase_link, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Ex: https://discord.gg/Tq3KQZTd" %>
        </div>

        <div class="sm:col-span-1">
          <label for="purchase_date" class="mb-2 text-sm font-medium text-gray-900 dark:text-white"><%= t('.purchase_date') %></label>
          <%= form.datetime_local_field :purchase_date, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Ex: https://discord.gg/Tq3KQZTd" %>
        </div>
      </div>
      <div class="sm:col-span-2 mt-5">
        <hr class="my-6 border-t border-gray-300 dark:border-gray-600">
        <h2 class="mt-5 text-lg font-semibold text-gray-900 dark:text-white mb-4"><%= t('.parameters') %></h2>
      </div>
      <div class="field mt-5">
        <%= form.label :is_visible_to_registered_participants, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" do %>
          <%= form.check_box :is_visible_to_registered_participants %>
          <%= t('.visible_to_registered_participants') %>
        <% end %>
      </div>
      <div class="field mt-5">
        <%= form.label :is_visible_after_time, class: "mb-2 text-sm font-medium text-gray-900 dark:text-white" do %>
          <%= form.check_box :is_visible_after_time %>
          <%= t('.visible_after_time') %>
        <% end %>
        <%= form.time_field :visible_after_time, class: "block mt-3 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "Visible After Time" %>
      </div>
      <div class="field mt-5">
        <%= form.label :is_visible_during_event, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" do %>
          <%= form.check_box :is_visible_during_event %>
          <%= t('.visible_during_event') %>
        <% end %>
      </div>
      <button type="submit" class="inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-primary-700 rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800">
        <%= t('.save') %>
      </button>
    <% end %>
  </div>
</section>
