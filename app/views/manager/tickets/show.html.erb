<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
    <div class="p-6 bg-white border-b border-gray-200">
      <h2 class="text-2xl font-semi-bold mb-4">Detalhes do Ticket</h2>
      <table class="min-w-full">
        <tr>
          <th class="text-left pr-4">ID:</th>
          <td><%= dom_id @ticket %></td>
        </tr>
        <tr>
          <th class="text-left pr-4"><%= t('views.manager.ticket.show.event') %></th>
          <td><%= @ticket.event.name %></td>
        </tr>
        <tr>
          <th class="text-left pr-4"><%= t('views.manager.ticket.show.student') %></th>
          <td><%= @ticket.student.name %></td>
        </tr>
        <tr>
          <th class="text-left pr-4"><%= t('views.manager.ticket.show.send_email') %></th>
          <td><%= @ticket.send_email_at %></td>
        </tr>
        <tr>
          <th class="text-left pr-4">Checkin:</th>
          <td><%= @ticket.checkin %></td>
        </tr>
        <tr>
          <th class="text-left pr-4">Ticket:</th>
          <td>
            <%= if @ticket.png.attached? %>
              <%= link_to image_tag(@ticket.png, size: "50x25"), @ticket.png, target: "_blank" %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th class="text-left pr-4">
            <% if @ticket.checkin %>
              <%= form_with(url: send_email_manager_ticket_path(@ticket), method: :post, class: "inline-block mr-4") do |form| %>
                <%= form.submit 'Enviar E-mail', class: 'bg-green-500 text-white font-bold py-2 px-4 rounded' %>
              <% end %>
            <% end %>
            <a href="<%= manager_tickets_path %>" class="bg-blue-700 text-white font-bold py-2 px-4 rounded inline-block">
              <%= t('views.manager.ticket.show.back') %>
            </a>
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>
