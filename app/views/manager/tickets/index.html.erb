<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
<div class="text-right">
  <a href="<%= new_manager_ticket_path %>" class="bg-blue-700 text-white font-bold py-2 px-4 rounded"><%= t('.new') %></a>
  <a href="<%= manager_tickets_select_student_csv_path %>" class="bg-blue-700 text-white font-bold py-2 px-4 rounded"><%= t('.generate_ticket') %></a>
</div>
  <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
    <div class="p-6 bg-white border-b border-gray-200">
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('.event') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('.student') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('.send_email') %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Checkin</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ticket</th>
        </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
        <% @tickets.each do |ticket| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap"><%= ticket.id %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= ticket.event.name %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= ticket.student.name %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= ticket.send_email_at %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= ticket.checkin %></td>
            <td class="px-6 py-4 whitespace-nowrap"><%= if ticket.png.attached?
                                                         link_to image_tag(ticket.png, size: "50x25"), ticket.png, target: "_blank"
                                                        end %>
            </td>
            <td class="px-4 py-3 flex items-center justify-end">
              <button id="lessons-dropdown-button-<%= ticket.id %>" data-dropdown-toggle="lessons-dropdown-<%= ticket.id %>" class="inline-flex items-center p-0.5 text-sm font-medium text-center text-gray-500 hover:text-gray-800 rounded-lg focus:outline-none dark:text-gray-400 dark:hover:text-gray-100" type="button">
                <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
                </svg>
              </button>
            </td>
          </tr>
          <div id="lessons-dropdown-<%= ticket.id %>" class="hidden z-10 w-30 bg-white rounded divide-y flex flex-col items-center divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600">
            <ul class="py-1 text-sm flex flex-col items-center text-gray-700 dark:text-gray-200" aria-labelledby="lessons-dropdown-button-<%= ticket.id %>">
              <li class="hover:bg-gray-100">
                <%= link_to(manager_ticket_path(ticket), class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white") do %>
                  <%= t('.show') %>
                <% end %>
              </li>
              <li class="hover:bg-gray-100">
                <%= link_to(edit_manager_ticket_path(ticket), class: "block py-2 px-4 dark:hover:bg-gray-600 dark:hover:text-white") do %>
                  <%= t('.edit') %>
                <% end %>
              </li>
            </ul>
            <div class="self-center hover:bg-gray-100">
              <%= link_to(manager_ticket_path(ticket), data: { turbo_method: :delete, turbo_confirm: t('.delete_confirm') }, class: "block py-2 px-4 text-sm text-gray-700 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white") do %>
                <%= t('.delete') %>
              <% end %>
            </div>
          </div>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
