<h1><%= I18n.t('views.manager.lesson.index.title') %></h1>

<table>
  <thead>
  <tr>
    <th>Título</th>
    <th>Evento</th>
    <th>Ações</th>
  </tr>
  </thead>
  <tbody>
  <% @lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.title %></td>
      <td><%= lesson.event.name %></td>
      <td>
        <%= link_to t('views.manager.lesson.show'), manager_lesson_path(lesson) %>
        <%= link_to t('views.manager.lesson.edit'), edit_manager_lesson_path(lesson) %>
        <%= button_to t('views.manager.lesson.delete'), manager_lesson_path(lesson), method: :delete, data: { confirm: 'Tem certeza que deseja excluir esta aula?' } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('views.manager.lesson.new'), new_manager_lesson_path %>
