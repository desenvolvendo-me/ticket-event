        <tr>
          <td style="border-radius: 2px;" bgcolor="#ED2939">
            <%= link_to "Clique aqui para pegar seu ingresso", event_ticket_url(@ticket.event.slug, @ticket.student.phone), target: "_blank", style: "padding: 8px 12px; border: 1px solid #ED2939;border-radius: 2px;font-family: Helvetica, Arial, sans-serif;font-size: 14px; color: #ffffff;text-decoration: none;font-weight:bold;display: inline-block;" %>
