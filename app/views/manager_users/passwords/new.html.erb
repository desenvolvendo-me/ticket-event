<h2><%= t 'views.manager_users.passwords.new.title' %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "manager_users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit t 'views.manager_users.passwords.new.instructions' %>
  </div>
<% end %>

<%= render "manager_users/shared/links" %>
