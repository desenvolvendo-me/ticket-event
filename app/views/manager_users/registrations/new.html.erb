<h2><%= t 'views.manager_users.registrations.new.sign_up' %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "manager_users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login, autofocus: true, autocomplete: "login" %>
  </div>

  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t 'views.manager_users.registrations.edit.min_characters'%>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :avatar_url %><br />
    <%= f.file_field :avatar_url, autofocus: true, autocomplete: "avatar" %>
  </div>

  <div class="actions">
    <%= f.submit t 'views.manager_users.registrations.new.sign_up' %>
  </div>
<% end %>

<%= render "manager_users/shared/links" %>
